<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sistema_farmacia.controller.controladores.PantallaCategoriasController"
            stylesheets="@../estilos/EstilosCategorias.css">

    <!-- Barra superior con botones de acción -->
    <top>
        <HBox spacing="14" alignment="CENTER_LEFT" style="-fx-padding: 25 0 11 350;">
            <Button fx:id="btnAgregar" text="Agregar"/>
            <Button fx:id="btnListar" text="Listar"/>
        </HBox>
    </top>

    <!-- Área central amarilla y grande, alineada a la izquierda -->
    <center>
        <VBox fx:id="areaSubpagina"
              styleClass="area-subpagina"
              alignment="CENTER_LEFT"
              VBox.vgrow="ALWAYS"
              prefWidth="800"
              prefHeight="600"
              style="-fx-padding: 30;">
            <GridPane fx:id="formularioAgregar"
                      hgap="16" vgap="26"
                      alignment="CENTER">
                <Label text="Nombre de la categoría:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="txtNombre" prefWidth="520" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Descripcion:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextArea fx:id="txtDescripcion" prefHeight="140" prefWidth="520" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button fx:id="btnAceptar" text="Aceptar" prefWidth="170" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>
        </VBox>
    </center>
</BorderPane>
