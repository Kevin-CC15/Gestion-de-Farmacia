<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sistema_farmacia.controller.controladores.PantallaVentasController"
            stylesheets="@../estilos/EstilosVentas.css">

    <!-- Buscador superior alineado y estilizado -->
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" style="-fx-padding: 25 0 11 350;">
            <Label text="Código producto:"/>
            <TextField fx:id="txtCodigoBuscar" promptText="Ej: 12345..." />
            <Button fx:id="btnAgregarProducto" text="Agregar"/>
        </HBox>
    </top>

    <!-- Tabla "carrito" centrada y área azul/celeste -->
    <center>
        <VBox spacing="16"
              alignment="CENTER_LEFT"
              styleClass="area-subpagina"
              style="-fx-padding: 30;">
            <TableView fx:id="tablaCarrito" prefHeight="320">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                    <TableColumn fx:id="colNombre" text="Nombre"/>
                    <TableColumn fx:id="colDescripcion" text="Descripción"/>
                    <TableColumn fx:id="colCategorias" text="Categorías"/>
                    <TableColumn fx:id="colCantidad" text="Cantidad"/>
                    <TableColumn fx:id="colStock" text="Stock"/>
                    <TableColumn fx:id="colPrecioUnitario" text="P. Unitario"/>
                    <TableColumn fx:id="colPrecioTotal" text="Total"/>
                    <TableColumn fx:id="colAcciones" text=""/>
                </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="18">
                <Label text="Total venta:"/>
                <Label fx:id="lblTotal" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </center>

    <!-- Barra inferior de acciones azul farmácia moderna -->
    <bottom>
        <HBox spacing="22" alignment="CENTER" style="-fx-padding: 22;">
            <Button fx:id="btnVender" text="Vender"/>
        </HBox>
    </bottom>
</BorderPane>

