<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sistema_farmacia.controller.controladores.PantallaProductosController"
            stylesheets="@../estilos/EstilosProductos.css">

    <!-- Barra superior con acciones -->
    <top>
        <HBox spacing="14" alignment="CENTER_LEFT" style="-fx-padding: 25 0 11 350;">
            <Button fx:id="btnAgregar" text="Agregar" />
            <Button fx:id="btnListar" text="Listar" />
        </HBox>
    </top>

    <!-- Área central para el contenido dinámico: tabla/listado/formulario de productos -->
    <center>
        <VBox fx:id="areaSubpagina"
              styleClass="area-subpagina"
              alignment="CENTER_LEFT"
              VBox.vgrow="ALWAYS"
              prefWidth="800"
              prefHeight="600"
              style="-fx-padding: 30;">
            <!-- Aquí el controlador insertará el formulario o la tabla -->
        </VBox>
    </center>
</BorderPane>
